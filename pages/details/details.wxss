/* pages/details/details.wxss */
.zhg-detail-view-container{
    display:flex;
    flex-direction: column;
    position: relative;
}
.zgh-detail-image-primaryImage{
    width:100%;
    height:460rpx;

}
.zgh-detail-image-musicIcon{
    width:60rpx;
    height:60rpx;
    position: absolute;
    top:170rpx;
    left:50%;
    margin-left:-60rpx;
}
.zgh-detail-view-smallTitle {
   padding:15rpx;
}
.zgh-detail-view-smallTitle image{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}
.zgh-detail-view-smallTitle text{
    font-size:35rpx;
    margin-left:15rpx;
}
.zgh-detail-text-title{
    font-size:40rpx;
    font-weight:700;
    margin-left:15rpx;
}
.zgh-detail-view-icon{
    position: relative;
}
.zgh-detail-view-icon view:nth-child(1){
     float: right;
     margin-right:40rpx;
}
.zgh-detail-view-icon image{
    width:90rpx;
    height:90rpx;
    margin-right:10rpx;
}
.zgh-detail-view-splitLine{
    width: 90%;
    height:1rpx;
    background: #e4e4e4;
    position:absolute;
    top: 50%;
    left: 5%;
    z-index:-1;
}
.zgh-detail-text-content{
     font-size: 34rpx;
     text-indent: 64rpx;/*首行缩进2个字符 */
     margin-top:25rpx;
}
.zgh-detail-button-shareArticle{
    width:300rpx;
    height:80rpx;
    line-height:1.65555;
    text-align: center;
    color:#fff;
    background: lime;
    margin-top:100rpx;
}