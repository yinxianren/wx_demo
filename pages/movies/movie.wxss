/* pages/movies/movie.wxss */
.zgh-movie-view-container{
    display: flex;
    flex-direction: row;
    padding:25rpx;
    border-bottom: 1rpx solid #bebebe;
}
.zgh-movie-image-movieImg{
    width:128rpx;
    height:128rpx;
}
.zgh-movie-view-movieDetail{
    display: flex;
    flex-direction: column;
    width: 70%;
    margin-left:25rpx;
    font-size: 30rpx;
}
.zgh-movie-view-movieDetail .name{
 font-size: 34rpx;
 font-weight:800;
 color: #000;
  width: 70%;
 white-space: nowrap;/*不换行*/
 overflow: hidden;/*超出部分隐藏*/
 text-overflow: ellipsis;/*超出部分用....表示   */
}
.zgh-movie-view-movieDetail .year{

 margin:20rpx 0;
 color: #666;

}
.zgh-movie-view-movieDetail .director{
 font-size: 32rpx;
 font-weight:500;
  color:#333;
}

.zgh-movie-text-grade{
 font-size: 36rpx;
 font-weight:700;
 color:red;

}