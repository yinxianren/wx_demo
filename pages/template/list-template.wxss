/* pages/template/list-template.wxss */
.temp-split{
    width:100%;
    height:2rpx;
    border-bottom:2rpx solid #d3d3d3;
    margin:25rpx 0;
}
.temp-container{
    display: flex;
    flex-direction: column;
}
.temp-head{
    padding:10rpx;
}
.temp-head image{
    width:60rpx;
    height:60rpx;
    vertical-align:middle;/*组件水平中间对齐*/
    margin-left:15rpx;
}
.temp-title{
    margin-left:15rpx;
    padding:10rpx;
    font-size:38rpx;
    font-weight:700;
    color: #323232;
}
.temp-primary-img{
    width:100%;
    height:460rpx;
}
.temp-primary-text{
    font-size:35rpx;
    text-indent:35rpx;
}
.temp-end-view image{
    width:32rpx;
    height:32rpx;
    vertical-align:middle;
    margin-right:10rpx;
}
.temp-end-view text{
    font-size:28rpx;
    margin-right:10rpx;
}